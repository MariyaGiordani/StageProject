@model StageProject.Model.ViewModel.ClientViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CodigoCliente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CodigoCliente)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TipoCliente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoCliente)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Idade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Idade)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EstadoCivil)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EstadoCivil)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genero)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genero)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NumeroAddresses)
        </dt>


        <dd>
            @Html.DisplayFor(model => model.NumeroAddresses)
        </dd>

        @if (Model.AddressesViewModels.Any())
        {
            <dt>
                @Html.DisplayName("Lista de endereços")
            </dt>

            <dd>
                <ul class="list-addresses-client">
                    @foreach (var info in Model.AddressesViewModels)
                    {
                        <li>@info.TipoLogradouro : @info.NomeLogradouro, @info.Complemento</li>
                        <li> CEP: @info.CEP, @info.Bairro, @info.Cidade</li>
                    }
                </ul>
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.NumeroTelefones)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumeroTelefones)
        </dd>
        @if (Model.TelefonesViewModels.Any())
        {
            <dt>
                @Html.DisplayName("Lista de Telefones")
            </dt>

            <dd>
                <ul class="list-telephones-client">
                    @foreach (var info in Model.TelefonesViewModels)
                    {
                        <li>@info.TipoTelefone - @info.Numero</li>
                    }
                </ul>
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
